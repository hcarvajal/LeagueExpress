<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - League Express
      
    </title>
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<link href="~/Content/bootstrap-reboot.min.css" rel="stylesheet" />
<body>

<nav class="navbar  navbar-expand-lg">
       <a href="@Url.Action("Index","Home")" class="navbar-brand">
       
       </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="fa fa-bars"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Menu
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        @Html.ActionLink("Teams","Index","Teams", new { area = "" }, new {@class = "dropdown-item"})
                        <a class="dropdown-item" href="Players/Create">Register</a>
                        <a class="dropdown-item" target="_blank" href="~/Documents/Broward PREMIER LEAGUE Adult Waiver.pdf">Waiver</a>
                        <div class="dropdown-divider"></div>
                        @Html.ActionLink("Pay Registration", "Pay", "Players", new { area = "" }, new { @class = "dropdown-item" })
                    </div>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Rules", "About", "Home", new { area = "" }, new {@class = "nav-link"})
                </li>

                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Photos</a>
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Player","Details","Players",new { area = "" }, new { @class = "nav-link"})
                </li>
            </ul>
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-search"></i></a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <form class="form-inline">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search">
                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </ul>
                </li>

            </ul>
                @Html.Partial("_LoginPartial")
        </div>
 </nav>
 <header class="masthead">
   <div class="container">
       <div class="row">
           <div class="col col-sm-6">
               <h1>
                   <a href="#" id="pageTitle" title="scroll down for your viewing pleasure">BROWARD PREMIERE LEAGUE</a>
                   <p class="lead">"One player, one league, your league"</p>
               </h1>
           </div>
           <div class="col-sm-6">
               <div class="pull-right">
                   <img src="~/images/bpllogo.png" width="60px" height="60px">
               </div>
           </div>
       </div>
   </div>
     <br />

     <div class="container">
         <div class="row">
             <div class="col-sm-12">
                 <div class="card">
                     <div class="card-body">
                         Latest News Enter Here <span class="fa fa-heart-o"></span>
                     </div>
                 </div>

             </div>
         </div>
     </div>




 </header>
 


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - LeagueExpress (c)</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
