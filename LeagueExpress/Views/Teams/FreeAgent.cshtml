@model IEnumerable<LeagueExpress.Models.Player>
@{
    ViewBag.Title = "FreeAgent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Current Free Agents</h2>

<div class="container-fluid">
    <div class="card-deck">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="card">
                    <div class="card-header">
                        <img class="card-img-top" src="~/images/Teams/PlayerYellow.jpg" style="height:100px; width:90px" alt="Card image cap">
                    </div>
                    <div class="card-body">
                        <h6 class="card-title">@Html.DisplayFor(modelItem => item.playerName)</h6>
                        <h6 class="card-title">@Html.DisplayFor(modelItem => item.playerPosition)</h6>
                        <h6 class="card-title">@Html.DisplayFor(modelItem => item.playerPlaceOfBirth)</h6>
                        <h6 class="card-title">Appearances: 0</h6>
                        <h6 class="card-title">Cleansheets: 0</h6>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

