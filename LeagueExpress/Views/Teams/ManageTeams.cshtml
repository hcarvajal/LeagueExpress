@model IEnumerable<LeagueExpress.Models.Team>

@{
    ViewBag.Title = "ManageTeams";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ManageTeams</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.teamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.teamManager)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.teamSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.teamPosition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.teamGamesPlayed)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.teamActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.teamName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.teamManager)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.teamSize)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.teamPosition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.teamGamesPlayed)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.teamActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
